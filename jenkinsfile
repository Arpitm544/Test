pipeline {  
    agent any  
    stages {  
        stage("Dependencies") {  
            steps {  
                sh 'npm install'  
            }  
        }  
        stage("Run Server") {  
            steps {  
                script {  
                    def output = sh(script: 'node server.js', returnStdout: true).trim()  
                    println "Code ${output} is running"  
                }  
            }  
        }  
        stage("Test") {  
            steps {  
                sh 'npm test || echo "No tests defined"'  
            }  
        }  
        stage("Build") {  
            steps {  
                echo 'npm run build'   
            }  
        }  
    }  
}
